def rotateMatrix(arr):
    for layer in range(round(len(arr)/2)):  # for each layer of the matrix
        start = layer
        stop = len(arr) - 1 - layer
        for i in range(start, stop):    # if len = 5, 0 - 4, 1 - 3, 2
            offset = i - start  # makes code below more readable

            temp = arr[start][i]

            arr[start][i] = arr[stop - offset][start]
            arr[stop - offset][start] = arr[stop][stop - offset]
            arr[stop][stop - offset] = arr[i][stop]
            arr[i][stop] = temp

    for i in range(len(arr)):
        print(arr[i])


